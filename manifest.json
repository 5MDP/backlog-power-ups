{
  "name": "Backlog Power Ups",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "cookies",
    "webRequest",
    "storage",
    "https://*.backlogtool.com/*",
    "https://*.backlog.com/*",
    "https://*.backlog.jp/*"
  ],
  "icons": { 
   "128": "icon128.png" 
  },
  "page_action": {
    "default_icon": "icon128.png",
    "default_title": "Backlog Power Ups",
    "default_popup" : "popup/popup.html"
  },
  "background":{
    "scripts" : [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.backlog.jp/view/*", 
        "https://*.backlogtool.com/view/*", 
        "https://*.backlog.com/view/*",
        "https://*.backlog.jp/add/*", 
        "https://*.backlogtool.com/add/*", 
        "https://*.backlog.com/add/*"
      ],
      "js": ["libs/jquery.js", "copy-issue/copy-issue.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/view/*", 
        "https://*.backlogtool.com/view/*", 
        "https://*.backlog.com/view/*"
      ],
      "js": ["libs/jquery.js", "auto-resolution/auto-resolution.js"]
    }
  ]
}
