{
  "name": "Backlog Power Ups",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "cookies",
    "webRequest",
    "storage",
    "https://*.backlogtool.com/*",
    "https://*.backlog.com/*",
    "https://*.backlog.jp/*"
  ],
  "icons": { 
   "128": "icon128.png" 
  },
  "page_action": {
    "default_icon": "icon128.png",
    "default_title": "Backlog Power Ups",
    "default_popup" : "popup/popup.html"
  },
  "background":{
    "scripts" : [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.backlog.jp/view/*", 
        "https://*.backlogtool.com/view/*", 
        "https://*.backlog.com/view/*",
        "https://*.backlog.jp/add/*", 
        "https://*.backlogtool.com/add/*", 
        "https://*.backlog.com/add/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "copy-issue/copy-issue.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/view/*", 
        "https://*.backlogtool.com/view/*", 
        "https://*.backlog.com/view/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "auto-resolution/auto-resolution.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/add/*", 
        "https://*.backlogtool.com/add/*", 
        "https://*.backlog.com/add/*",
        "https://*.backlog.jp/view/*/edit", 
        "https://*.backlogtool.com/view/*/edit", 
        "https://*.backlog.com/view/*/edit"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "extend-desc/extend-desc.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/view/*", 
        "https://*.backlogtool.com/view/*", 
        "https://*.backlog.com/view/*",
        "https://*.backlog.jp/add/*", 
        "https://*.backlogtool.com/add/*", 
        "https://*.backlog.com/add/*",
        "https://*.backlog.jp/view/*/edit", 
        "https://*.backlogtool.com/view/*/edit", 
        "https://*.backlog.com/view/*/edit"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "clear-notified-users/clear-notified-users.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/wiki/*/*", 
        "https://*.backlogtool.com/wiki/*/*", 
        "https://*.backlog.com/wiki/*/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "copy-wiki/copy-wiki.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/wiki/*/*", 
        "https://*.backlogtool.com/wiki/*/*", 
        "https://*.backlog.com/wiki/*/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "child-page/child-page.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/wiki/*/*", 
        "https://*.backlogtool.com/wiki/*/*", 
        "https://*.backlog.com/wiki/*/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/rawdeflate.js", "libs/power-ups.js", "plantuml/plantuml.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/wiki/*/*", 
        "https://*.backlogtool.com/wiki/*/*", 
        "https://*.backlog.com/wiki/*/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "hr/hr.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/user/*", 
        "https://*.backlogtool.com/user/*", 
        "https://*.backlog.com/user/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "user-switcher/user-switcher.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/*", 
        "https://*.backlogtool.com/*", 
        "https://*.backlog.com/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "filter-notification/filter-notification.js"]
    },
    {
      "matches": [
        "https://*.backlog.jp/view/*",
        "https://*.backlogtool.com/view/*",
        "https://*.backlog.com/view/*"
      ],
      "all_frames": true,
      "js": ["libs/jquery.js", "libs/power-ups.js", "paste-file-from-clipboard/paste-file-from-clipboard.js"]
    }
  ]
}
